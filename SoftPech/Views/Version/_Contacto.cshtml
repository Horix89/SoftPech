@model SoftPech.Models.InicioViewModel

<div>
    <p class="titulosSeccion" style="color: white;">
        Contactanos
    </p>

    <p class="copeteSeccion">
        Para presupuestos, duda o inquietud que tengas no dudes en ponerte en contacto con nosotros.
    </p>
    
    @using (Html.BeginForm("Contacto", "Version", FormMethod.Post))
    {
        <div class="container text-left" style="font-size: 17px;">
            <div class="form-group">
                <label>Dejanos tu correo para contactarte:</label>
                @Html.TextBoxFor(m => m.contacto.Correo, new { @class = "form-control" })
            </div>
			

            <div class="form-group">
                <label for="exampleInputPassword1">Asunto:</label>
                @Html.DropDownListFor(m => m.contacto.CodigoAsunto, Model.contacto.ListAsuntos, new { @class = "form-control", style="font-size: 17px; font-weight: bold;" })
            </div>

            <div class="form-group">
                <label for="exampleInputFile">Mensaje:</label>
                Mensaje: @Html.TextAreaFor(m => m.contacto.Mensaje, new { @class = "form-control", rows = "5" })

            </div>
        </div>

        <br /><br />
        <input type="submit" value="Enviar Consulta" class="btn btn-default"/>
    }

</div>